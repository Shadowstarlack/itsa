#include <iostream>    
#include <iomanip>      
using namespace std;      
      
int main() {      
    int miles;      
    double km;      
          
          
    cin >> miles;      
          
    km = miles * 1.6;      
          
    cout << fixed << setprecision(1) << km << endl;      
          
    return 0;      
}  
